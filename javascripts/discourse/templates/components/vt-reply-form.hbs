    <ComposerEditor @composer={{this.model}} @storeToolbarState={{action "storeToolbarState" }}
      @onPopupMenuAction={{action "onPopupMenuAction" }} @showUploadModal={{route-action "showUploadSelector" }}
      @isUploading={{this.isUploading}} @isProcessingUpload={{this.isProcessingUpload}} @afterRefresh={{action "afterRefresh" }}
      @allowUpload={{true}} @uploadIcon="far-image" @showToolbar={{true}} @processPreview={{false}}>
    </ComposerEditor>
    {{d-button
      type="submit"
      class="btn-save btn-primary"
      action=(action "save")
      forwardEvent=true
      isLoading=isProcess
      disabled=isProcess
    }}
</div>
